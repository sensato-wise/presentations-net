@{
    ViewBag.Title = "Home Page";
	Html.Assets().Styles.Add("/Content/jquery.tagsinput.css");
    Html.Assets().Styles.Add("/Content/jquery.autocomplete.css");
}

<h2>@ViewBag.Message</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.tagsinput.js")" type="text/javascript" charset="utf-8"></script>
<script src="@Url.Content("~/Scripts/jquery.autocomplete.min.js")" type="text/javascript"></script>


<script type="text/javascript">
    $(function () {
        $('#tags').tagsInput({

            autocomplete_url: "@Url.Content("~/Presentation/Tags")",
            autocomplete: { selectFirst: false, width: '100px', autoFill: false }
        });
});
</script>

<h2 Align=Center>Search now:</h2>
<form method="post" action="Search/Index">
		<div>
				<p Align=Center>	
					<input name="searchString" id="tags" runat="server" />			
				</p>
				<p Align=Center>
					<input id="save" type="submit" value="Search" runat="server" />	
				</p>
		</div>
</form>

