@model Presentation.Models.PresentationModel

@{
    ViewBag.Title = "Edit";
	Html.Assets().Styles.Add("/Content/tags/jquery.tagsinput.css");
	Html.Assets().Styles.Add("/Content/tags/jquery.autocomplete.css");
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.tagsinput.js")" type="text/javascript" charset="utf-8"></script>
<script src="@Url.Content("~/Scripts/jquery.autocomplete.min.js")" type="text/javascript"></script>

<script type="text/javascript">
    $(function () {
        $('#tags').tagsInput({

            autocomplete_url: "@Url.Content("~/Presentation/Tags")",
            autocomplete: { selectFirst: false, width: '100px', autoFill: false }
        });
});
</script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>PresentationModel</legend>

        @Html.HiddenFor(model => model.PresentationId)
        
        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="editor-label">
            @Html.Label("Tags")
        </div>
        <input name="tags" id="tags" runat="server" />        
        <p>
            <input id="save" type="submit" value="Save" runat="server" />	
        </p>
		<p>
        <input id="save2" type="submit" value="Редактировать содержимое слайдов" runat="server" />	        
		</p>		
    </fieldset>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
