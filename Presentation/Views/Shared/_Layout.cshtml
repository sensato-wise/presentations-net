<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <div id="header">
            <div id="title">
                <h1>Presentations-net</h1>
            </div>

            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <div id="menucontainer">
                <ul id="menu">				
				<li>@Html.ActionLink("Designer", "../SlideDisplay/Designer", "Designer")</li>
				@if (Request.IsAuthenticated) {	
						if (User.IsInRole("Admin") ) {
							<li>@Html.ActionLink("Admin Dashboard", "../Admin/Dashboard" )</li>
						}
						<li>@Html.ActionLink("My Presentations", "../Presentation/Index" )</li>
						<li>@Html.ActionLink("Account", "../User/Details", new { Name=User.Identity.Name, ViewType="One" } )</li>
					}
                   	<li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>
            </div>			
        </div>
        <div id="main">
            @RenderBody()
        </div>
        <div id="footer">
        </div>
    </div>
</body>
</html>